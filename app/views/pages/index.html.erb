    <div class="row jumbotron">
        <h2>Join the Giftr community and never give a bad gift again!  Sign up to be notified when Giftr is ready to launch.</h2>
        <%= form_tag("/users", method: "post") do %>
            <%= text_field_tag(:email, nil, placeholder: "Email Address", class: "form-control" ) %>
            <p>&nbsp;</p>
        <%= submit_tag("Sign me up!", class: "btn btn-info") %>
        <% end %>
    </div>
